<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/up"
        android:src="@drawable/top"
        android:layout_above="@+id/upleft"
        android:layout_toStartOf="@+id/downright" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upleft"
        android:src="@drawable/topleft"
        android:layout_marginEnd="52dp"
        android:layout_above="@+id/textView2"
        android:layout_toStartOf="@+id/up" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upright"
        android:src="@drawable/topright"
        android:layout_above="@+id/down"
        android:layout_alignEnd="@+id/downright" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:src="@drawable/bottom"
        android:layout_below="@+id/upleft"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downleft"
        android:src="@drawable/bottomleft"
        android:layout_alignTop="@+id/downright"
        android:layout_alignStart="@+id/upleft" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downright"
        android:src="@drawable/bottomright"
        android:layout_marginBottom="166dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/down"
        android:layout_marginStart="48dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brake"
        android:src="@drawable/brakebig"
        android:layout_alignTop="@+id/down"
        android:layout_alignStart="@+id/upright" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headlight"
        android:src="@drawable/light"
        android:layout_above="@+id/up"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Headlight"
        android:id="@+id/textView"
        android:layout_above="@+id/headlight"
        android:layout_alignEnd="@+id/upleft" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Remote Car"
        android:id="@+id/textView2"
        android:background="#ffffff"
        android:layout_above="@+id/downright"
        android:layout_alignParentStart="true"
        android:layout_marginStart="131dp"
        android:layout_marginBottom="44dp"
        android:textColor="#020000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Brake"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/brake"
        android:layout_toStartOf="@+id/brake" />

</RelativeLayout>